<tr data-id="$id$" data-title="$title$" data-name="$name$">

	<td><i class="write icon"></i> $title$</td>

	<td>$value$</td>

	<td class="right aligned">

		<a class="ui mini positive icon button" href="$install_path$/admin/content/variables/edit?id=$id$" title="%VARIABLES_ITEM_EDIT%"><i class="edit icon"></i></a>

		<a class="ui mini primary icon info button" title="%VARIABLES_ITEM_INFO%"><i class="info icon"></i></a>

		{ block:remove }

		<a class="ui mini negative icon remove button" title="%VARIABLES_ITEM_REMOVE%"><i class="remove icon"></i></a>

		{ / block:remove }

	</td>

</tr>
