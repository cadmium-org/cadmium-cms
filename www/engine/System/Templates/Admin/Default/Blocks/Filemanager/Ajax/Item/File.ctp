<tr data-type="file" data-name="$name$" data-path="$path$" data-mime="$mime$" data-format="$format$">

	<td><i class="file $format$ outline icon"></i> <a href="$link$" target="$target$">$name$</a></td>

	<td>$size$</td>

	<td class="right aligned">

		{ block:media }

		<a class="ui mini $class$ icon media button" title="%FILEMANAGER_ITEM_INSERT_AS_MEDIA%"><i class="code icon"></i></a>

		{ / block:media }

		{ block:link }

		<a class="ui mini grey icon link button" title="%FILEMANAGER_ITEM_INSERT_AS_LINK%"><i class="linkify icon"></i></a>

		{ / block:link }

	</td>

</tr>
