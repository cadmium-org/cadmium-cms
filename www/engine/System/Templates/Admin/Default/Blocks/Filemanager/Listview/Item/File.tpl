<tr data-type="file" data-name="$name$">

	<td><i class="file $type$ outline icon"></i> <a href="$install_path$/uploads/$path$" target="_blank">$name$</a></td>

	<td>$size$</td>

	<td class="right aligned">

		<a class="ui mini positive icon button" href="$install_path$/admin/content/filemanager/file?parent=$parent$&name=$name$"

		   title="%FILEMANAGER_ITEM_EDIT%"><i class="edit icon"></i></a>

		<a class="ui mini negative icon remove button" title="%FILEMANAGER_ITEM_REMOVE%"><i class="remove icon"></i></a>

	</td>

</tr>
